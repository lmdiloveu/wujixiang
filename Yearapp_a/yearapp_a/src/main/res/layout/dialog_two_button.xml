<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/tv_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20sp"
        android:background="@null"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/y60"
        android:paddingBottom="@dimen/y60"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#700b"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:orientation="horizontal"
        android:background="@null">
        <TextView
            android:id="@+id/tv_dialog_btn1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#00f"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/dialog_selector_left_btn"
            />
        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="#700b"
            />
        <TextView
            android:id="@+id/tv_dialog_btn2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="#00f"
            android:gravity="center"
            android:background="@drawable/dialog_selector_right_btn"
            />
    </LinearLayout>

</LinearLayout>