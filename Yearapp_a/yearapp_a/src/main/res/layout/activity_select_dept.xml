<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    android:orientation="vertical" 
    android:id="@+id/root_select_dept">

    <FrameLayout
        android:layout_width="@dimen/x259"
        android:layout_height="@dimen/y261"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y35"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/iv_logo_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_logo_bg_small"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_logo_small"/>
    </FrameLayout>

    <ImageView
        android:layout_width="@dimen/x477"
        android:layout_height="@dimen/y116"
        android:layout_marginTop="@dimen/y35"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/kouhao_logo" />
    
    <ImageView
        android:layout_width="@dimen/x485"
        android:layout_height="@dimen/y94"
        android:layout_marginTop="@dimen/y35"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_welcome" />
    
     <Button 
        android:id="@+id/btn_select_dept"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:layout_marginTop="@dimen/y25"
        android:text="@string/selelct_your_department"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:background="#B9291E"/>
    <Button 
        android:id="@+id/btn_select_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:background="#BB3A35"/>

</LinearLayout>
